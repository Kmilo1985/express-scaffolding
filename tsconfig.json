{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "./",
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["/**/*.ts", "app-data-source.ts"],
  "exclude": ["node_modules", "build"]
}
